		<property name="tbSuffixPadding" value="_"/>
		<property name="dbRules" value="cn.com.gome.sn.rule.MyDbRule.getIndex(#pk#)"/>
		<property name="tbRules" value="cn.com.gome.sn.rule.MyTbRule.getIndex(#pk#)"/>
